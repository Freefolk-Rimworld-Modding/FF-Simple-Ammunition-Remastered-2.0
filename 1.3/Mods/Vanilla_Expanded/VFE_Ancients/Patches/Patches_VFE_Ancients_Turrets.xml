<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- Ancient security turret -->

  <!-- Fuel Label -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "VFEA_Turret_AncientSecurityTurret"]/comps/li/fuelLabel</xpath>
    <value>
      <fuelLabel>Shots until out of ammo</fuelLabel>
    </value>
  </Operation>

  <!-- Fuel Gizmo Label -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "VFEA_Turret_AncientSecurityTurret"]/comps/li/fuelGizmoLabel</xpath>
    <value>
      <fuelGizmoLabel>Ammo left</fuelGizmoLabel>
    </value>
  </Operation>

  <!-- Out of fuel Message -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "VFEA_Turret_AncientSecurityTurret"]/comps/li/outOfFuelMessage</xpath>
    <value>
      <outOfFuelMessage>Cannot shoot: Needs ammo</outOfFuelMessage>
    </value>
  </Operation>

	<!-- Ammo Type -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VFEA_Turret_AncientSecurityTurret"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs/li</xpath>
    <value>
      <li>FF_Ammunition_Spacer</li>
    </value>
  </Operation>


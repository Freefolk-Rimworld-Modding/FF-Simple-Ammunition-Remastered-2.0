  </Operation>

<!-- Uranium Slug Turret -->

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Turret_Sniper"]/description</xpath>
    <value>
      <description>An armor-piercing turret. Its ultra-dense uranium barrel can punch through heavy armor, but it requires new heavy slugs to be loaded after use. It's more accurate at longer ranges, and can't fire at all close up. May explode when damaged.</description>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Turret_Sniper"]/label</xpath>
    <value>
      <label>heavy slug turret</label>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Turret_Sniper"]/comps/li[@Class="CompProperties_Refuelable"]/fuelGizmoLabel</xpath>
